type User {
    id: ID !
    username: String !
    email: String !
    role: String !
}

extend type Query {
    login(userLogin: UserLoginDTO !): User
}

input UserLoginDTO {
    email: String !
    password: String !
}

input UserDTO {
    username: String !
    password: String !
    role: String !
    email: String !
}