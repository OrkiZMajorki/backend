type User {
    id: ID !
    username: String !
    email: String !
    role: String !
}

extend type Query {
    login(userLogin: UserLoginDTO !): User
}

input UserLoginDTO {
    email: String !
    password: String !
}

extend type Mutation {
    createUserBand(user: UserDTO !, band: BandDTO !): User !
    createUserVenue(user: UserDTO !, venue: VenueDTO !): User !
}

input UserDTO {
    username: String !
    password: String !
    role: String !
    email: String !
}